<div class="col-sm-3">
  <div class="card">
    <% if artist.images[0].present? %>
      <%= image_tag  artist.images[0]['url'], class: 'card-img-top' %>
    <% else %>
      <%= image_tag "spotify-home.jpg", class: 'card-img-top' %>
    <% end %>
    <div class="card-body">
      <h7 class="card-title"><%= @number_count += 1 %>.  <span><%= artist&.name %></span></h7>
      <br>
      <h8 class="card-title"><i class="fas fa-fire text-center"></i>  <span><%= artist&.popularity %>/100</span></h8>
    </div>
  </div>
  <br>
</div>
